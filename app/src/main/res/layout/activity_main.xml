<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="vertical"
    android:scrollbarTrackVertical="@color/design_default_color_primary"
    android:overScrollMode="ifContentScrolls"
  >

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:paddingTop="100dp"
    android:id="@+id/card_gpa"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <androidx.cardview.widget.CardView
        android:layout_width="300dp"
        app:cardCornerRadius="20dp"
        android:background="@color/design_default_color_error"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="-10dp"

        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:padding="10dp"
            android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <View
                android:layout_width="match_parent"
                android:layout_height="10dp">

            </View>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="GPA Calculator"
                android:textColor="@color/design_default_color_primary"
                android:textSize="20sp">

            </TextView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Calculate your College GPA"
                android:textColor="@color/cardview_shadow_start_color"
                android:textSize="10sp">

            </TextView>
        </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content">
            <TextView
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="CSIT 503	Data Structures"
               />

            <EditText
                android:layout_width="80dp"
                android:inputType="number"
                android:hint="Grade"
                android:maxLength="3"
                android:id="@+id/txtcourse1"
                android:layout_height="wrap_content">

            </EditText>



        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="CSIT 537	Web Development"
                />

            <EditText
                android:layout_width="80dp"
                android:inputType="number"
                android:hint="Grade"
                android:maxLength="3"
                android:id="@+id/txtcourse2"
                android:layout_height="wrap_content">

            </EditText>



    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="CSIT 555	Database Systems"
            />

        <EditText
            android:layout_width="80dp"
            android:inputType="number"
            android:maxLength="3"
            android:hint="Grade"
            android:id="@+id/txtcourse3"
            android:layout_height="wrap_content">

        </EditText>



    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="CSIT 561	Computer Security"
            />

        <EditText
            android:layout_width="80dp"
            android:inputType="number"
            android:hint="Grade"
            android:maxLength="3"
            android:id="@+id/txtcourse4"
            android:layout_height="wrap_content">

        </EditText>



    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="CSIT 531 Robotics"
            />

        <EditText
            android:layout_width="80dp"
            android:inputType="number"
            android:hint="Grade"
            android:maxLength="3"
            android:id="@+id/txtcourse5"
            android:layout_height="wrap_content">

        </EditText>



    </LinearLayout>

            <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <View
                android:layout_width="match_parent"
                android:layout_height="30dp">

            </View>

            <Button
                android:id="@+id/btngpa"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:tag="GPA"
                android:text="Calculate GPA"
                >

            </Button>
            <View
                android:layout_width="match_parent"
                android:layout_height="20dp">

            </View>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                android:layout_width="200dp"
                app:cardCornerRadius="10dp"
                android:layout_margin="10dp"
                android:layout_gravity="center_horizontal"
                android:background="@color/design_default_color_error"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="20dp">

                    </View>
                    <TextView
                        android:layout_width="200dp"
                        android:layout_margin="10dp"
                        android:layout_height="wrap_content"
                        android:text="Your GPA"
                        />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="5dp">

                    </View>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:text=""
                        android:id ="@+id/txtgpa"
                        android:textColor="@color/design_default_color_primary"
                        android:textSize="40sp">

                    </TextView>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
        </LinearLayout>



    </androidx.cardview.widget.CardView>






</RelativeLayout>
</ScrollView>